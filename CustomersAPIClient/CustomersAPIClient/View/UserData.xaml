        </TextBox>
            

        <Button Content="Save"  
                Margin="221.2,71.4,9.6,14"
                Grid.Column="1"
                Grid.Row="2"  
                Background="Blue" 
                Foreground="White" 
                Command="{Binding SaveCommand}"/>
        <Button Content="Cansel"
                Margin="149.2,71.4,80.6,14" 
                Grid.Column="1"
                Grid.Row="2"
                Background="Red" 
                Foreground="White"
                Command="{Binding AddPerson}"/>
    </Grid>
</Window>
